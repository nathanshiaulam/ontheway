block script
    script(type='text/javascript', src='/javascripts/smoothscroll.js')
    script(type='text/javascript').
        function isiPhone(){
            return (
                //Detect iPhone
                (navigator.platform.indexOf("iPhone") != -1) ||
                //Detect iPod
                (navigator.platform.indexOf("iPod") != -1)
            );
        }
        if (navigator.userAgent.indexOf('Safari') != -1 && navigator.userAgent.indexOf('Chrome') == -1) {
              $(".symbol").addClass("relative");
              $(".headerText").addClass("relative");
              $(".app-buttons").addClass("relative");
              $(".diamonds").addClass("relative");
              $(".role-title").addClass("relative");
        }
        if (navigator.userAgent.indexOf('Firefox') != -1 && navigator.userAgent.indexOf('Chrome') == -1) {
              $(".symbol").addClass("relative");
              $(".headerText").addClass("relative");
              $(".app-buttons").addClass("relative");
              $(".diamonds").addClass("relative");
              $(".remove").remove();
        }

        /* config dom id (optional) + config particles params */
        if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || isiPhone()) {
              $(".symbol").addClass("relative");
              $(".headerText").addClass("relative");
              $(".app-buttons").addClass("relative");
              $(".non-diamond").addClass("no-background");
              $(".non-diamond").addClass("fixed");
              $(".no-cuts").addClass("no-cuts-mobile");
              $(".sub-sub-header").removeClass("no-cuts");
              $(".headerText").removeClass("headerText-desktop");
              $(".headerText").addClass("headerText-mobile");

              particlesJS('particles-js', {
              particles: {
                color: '#fff',
                color_random: false,
                shape: 'circle', // "circle", "edge" or "triangle"
                opacity: {
                  opacity: 1,
                  anim: {
                    enable: true,
                    speed: 2,
                    opacity_min: 0,
                    sync: false
                  }
                },
                size: 1,
                size_random: true,
                nb: 30,
                line_linked: {
                  enable_auto: true,
                  distance: 100,
                  color: '#fff',
                  opacity: 1,
                  width: 1,
                  condensed_mode: {
                    enable: false,
                    rotateX: 600,
                    rotateY: 600
                  }
                },
                anim: {
                  enable: true,
                  speed: 1
                }
              },
              interactivity: {
                enable: true,
                mouse: {
                  distance: 100
                },
                detect_on: 'canvas', // "canvas" or "window"
                mode: "grab", // "grab" of false
                line_linked: {
                  opacity: .5
                },
                events: {
                  onclick: {
                    enable: true,
                    mode: 'push', // "push" or "remove"
                    nb: 4
                  },
                  onresize: {
                    enable: true,
                    mode: 'out', // "out" or "bounce"
                    density_auto: false,
                    density_area: 800 // nb_particles = particles.nb * (canvas width *  canvas height / 1000) / density_area
                  }
                }
              },
              /* Retina Display Support */
              retina_detect: false
            });
        }
        else {
          $(".remove").remove();
          $(".navbar").removeClass("relative");
              new WOW().init();
              particlesJS('particles-js', {
              particles: {
                color: '#fff',
                color_random: false,
                shape: 'circle', // "circle", "edge" or "triangle"
                opacity: {
                  opacity: 1,
                  anim: {
                    enable: true,
                    speed: 2,
                    opacity_min: 0,
                    sync: false
                  }
                },
                size: 1,
                size_random: true,
                nb: 90,
                line_linked: {
                  enable_auto: true,
                  distance: 100,
                  color: '#fff',
                  opacity: 1,
                  width: 1,
                  condensed_mode: {
                    enable: false,
                    rotateX: 600,
                    rotateY: 600
                  }
                },
                anim: {
                  enable: true,
                  speed: 1
                }
              },
              interactivity: {
                enable: true,
                mouse: {
                  distance: 200
                },
                detect_on: 'canvas', // "canvas" or "window"
                mode: "grab", // "grab" of false
                line_linked: {
                  opacity: .5
                },
                events: {
                  onclick: {
                    enable: true,
                    mode: 'push', // "push" or "remove"
                    nb: 2
                  },
                  onresize: {
                    enable: true,
                    mode: 'out', // "out" or "bounce"
                    density_auto: false,
                    density_area: 800 // nb_particles = particles.nb * (canvas width *  canvas height / 1000) / density_area
                  }
                }
              },
              /* Retina Display Support */
              retina_detect: false
            });
        }
        
       

