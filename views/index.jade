extends layout

block content   
    div.cover.red
        div.container.box
            img.logo(src="images/main-logo.png")
            hr.symbol
            div.headerText
                h2.sub-header The world's first peer-to-peer delivery network.
                h3.sub-sub-header No middlemen. No markups. No commissions.
                h3.sub-sub-header You make all the profit.
                div.app-buttons
                    a(href='/', class='svg')
                        object.download-button.apple(data='images/appledownload.svg', type='image/svg+xml',  class="mailicon")
                    a(href='/')
                        img.download-button.android(src='images/androiddownload.png')
    div.full-page.white
        div#process.container
            div.steps.container
                div.role.header
                    h1 Picking something up?
                div.col-md-3
                    h2 1. Browse Requests
                    p See what people are looking for
                div.col-md-3
                    h2 2. Click 'Go'
                    p Accept requests that are on the way
                div.col-md-3
                    h2 3. Deliver
                    p Purchase the item and deliver it
                div.col-md-3
                    h2 4. Get Paid
                    p You make money, and it was all on the way.
            div.steps.container
                div.role.header
                    h1 Need something?
                div.col-md-3
                    h2 1. Describe 
                    p Write a short description of what you want
                div.col-md-3
                    h2 2. Set your location
                    p Let people know where you want
                div.col-md-3
                    h2 3. Make your payment
                    p We handle the payment process for you
                 div.col-md-3
                    h2 4. Enjoy your delivery
                    p It's as if you went there and got it yourself
    //- div#next
block script
    script(type='text/javascript', src='/javascripts/smoothscroll.js')
    script(type='text/javascript').
        function fadeIn($elts) {
          $elts.each(function() {
            var $this = $(this);
            if ($this.css('opacity') == 0 || !$this.is(':visible'))
              $this.fadeIn('slow');
          });
        }
        function fadeOut($elts) {
          $elts.each(function() {
            var $this = $(this);
            if ($this.css('opacity') == 1 || $this.is(':visible'))
              $this.fadeOut('fast');
          });
        }
        function displayNone($elts) {
          $elts.each(function() {
            var $this = $(this);
            if ($this.css('opacity') == 1 || $this.is(':visible'))
              $this.css('display', 'none');('fast');
          });
        }
        $(".download-btns").hover(function(){
            $(".download-text").css('display', 'none');
            $(".download-btns").css('padding', '0');
            fadeIn($(".windows-btn, a.mac-btn, #download-info"));
            },
            function(){  
                displayNone($(".windows-btn, a.mac-btn, #download-info"));
                $(".download-btns").css('padding-top', '10%');
                $(".download-btns").css('padding-bottom', '10%');
                $(".download-text").fadeIn('slow');
        });
        $(document).ready(function() {
            var logo = $('.logo');
            var main_head = $('.main-header');
            var sub_head = $('.sub-header');
            var linebreak = $('.symbol');
            var sub_sub_header = $('.sub-sub-header');
            var app_buttons = $('.app-buttons');
            $(logo).fadeTo(1500, 1);
            $(main_head).delay(400).fadeTo(1500, 1);
            $(linebreak).delay(800).fadeTo(1500, 1);
            $(sub_head).delay(800).fadeTo(1500, 1);
            $(sub_sub_header).delay(1200).fadeTo(1500, 1);
            $(app_buttons).delay(1200).fadeTo(1500, 1);
        });
       

